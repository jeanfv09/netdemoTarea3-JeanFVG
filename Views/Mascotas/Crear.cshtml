@model netdemoTarea3.Models.Mascota

<h2>Registrar Mascota</h2>

<form asp-action="Crear" method="post" style="max-width:420px;">
    <div style="margin-bottom:10px;">
        <label asp-for="Nombre"></label><br />
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div style="margin-bottom:10px;">
        <label asp-for="Tipo"></label><br />
        <input asp-for="Tipo" class="form-control" />
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>

    <div style="margin-bottom:10px;">
        <label asp-for="Edad"></label><br />
        <input asp-for="Edad" type="number" class="form-control" />
        <span asp-validation-for="Edad" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
